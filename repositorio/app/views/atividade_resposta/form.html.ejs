<input type="hidden" id="atvResp-atv" name="atividadeId" value="<%= atividadeId %>">
<div class="col-lg-12">
    <div class="form-panel">
		  <h3>Upload a file</h3>

		<div class="control-group">
		  <label for="file" class="control-label">Arquivo</label>
		  <div class="controls">
			
			<%- contentTag('input', atividadeRespostum.fileNome, {type:'file', class:'span3', name:'name'}) %>
		  </div>
		</div>
		<div class="control-group">
		  <label for="data" class="control-label">data</label>
		  <div class="controls">
			<%- contentTag('input', atividadeRespostum.data, {type:'text', class:'datePicker', name:'data'}) %>
		  </div>
		  <script type='text/javascript'>
			var now = moment().subtract("days", 300 ),
				later = moment().add("days", 300 );
			  $(".datePicker").filthypillow( {
				minDateTime: function(){
				  return now;
				},
				maxDateTime: function(){
				  return later;
				}
			  } );
			  $(".datePicker").on( "focus", function() {
				$(".datePicker").filthypillow("show");
			  } );
			$(".datePicker").filthypillow("show");
			
			$(".datePicker").on( "fp:save", function( e, dateObj ) {
			  $(".datePicker").val( dateObj.format( "DD/MM/YYYY hh:mm A" ) );
			  
			  $(".datePicker").filthypillow( "hide" );
			} );
			
		  </script>
		</div>
	</div>
</div>
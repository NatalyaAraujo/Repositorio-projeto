<div class="hero-unit">
  <h2 class="texto"><%= mensagem.texto %></h2>
  <%- linkTo('Edit this mensagem', editMensagemPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', mensagemPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Mensagem Properties</h2>
<% for(var i in mensagem) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= mensagem[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>